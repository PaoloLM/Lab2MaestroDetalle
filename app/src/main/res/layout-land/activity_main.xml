<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragmentoLista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.desarrollo.laboratorio2.Fragmentos.ListaLoveLiveFragment"
        tools:layout="@layout/fragment_lista_love_live"
        android:layout_weight="2"/>

    <fragment
        android:id="@+id/fragmentoDetalle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.desarrollo.laboratorio2.Fragmentos.DetalleLoveLiveFragment"
        tools:layout="@layout/fragment_detalle_love_live"
        android:layout_weight="1"/>

</LinearLayout>